! {{@@ header() @@}}

XTerm*allowBoldFonts:       true
xterm*borderWidth:          0
XTerm*cursorBlink:          true
xterm*dynamicColors:        true
xterm*faceName:             DejaVu Mono
XTerm*faceSize:             {{@@ font_size @@}}
xterm*font:                 *-fixed-*-*-*-{{@@ font_size @@}}-*
XTerm*locale:               true
XTerm*reverseVideo:         off
xterm*rightScrollBar:       true
Xterm*saveLines:            10000000
xterm*scrollBar:            false
xterm*selectToClipboard:    true
xterm*termName:             xterm-256color
xterm*toolBar:              true
XTerm*utf8:                 1
xterm*VT100.geometry:       80x25
XTerm.vt100.metaSendsEscape: true

! double-click to select whole URLs :D
xterm*charClass: 33:48,36-47:48,58-59:48,61:48,63-64:48,95:48,126:48
! stop output to terminal from jumping down to bottom of scroll again
xterm*scrollTtyOutput: false

! special
xterm*.foreground:   #ffffff
xterm*.background:   #000000
xterm*.cursorColor:  #ffffff

! black
xterm*.color0:       #000000
xterm*.color8:       #828282

! red
xterm*.color1:       #dc322f
xterm*.color9:       #dc322f

! green
xterm*.color2:       #56db3a
xterm*.color10:      #56db3a

! yellow
xterm*.color3:       #ff8400
xterm*.color11:      #ff8400

! blue
xterm*.color4:       #0084d4
xterm*.color12:      #0084d4

! magenta
xterm*.color5:       #b729d9
xterm*.color13:      #b729d9

! cyan
xterm*.color6:       #ccccff
xterm*.color14:      #ccccff

! white
xterm*.color7:       #ffffff
xterm*.color15:      #ffffff
